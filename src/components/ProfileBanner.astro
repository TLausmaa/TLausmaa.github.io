---
import ProfilePicture from '../components/ProfilePicture.astro'
---
<div class="container">
    <ProfilePicture />
    <div class="text-stack">
        <h1 class="header1"><span class="text-gradient">Timo Lausmaa</span></h1>
        <h1 class="header2">Senior Full Stack Developer</h1>
        <div class="contact-details">
            <div>firstname.lastname@gmail.com</div>
            <div class="secondary-contact-details">
                <a href="https://www.linkedin.com/in/timo-lausmaa-68b502155/">LinkedIn</a>
                <div>Helsinki, Finland</div>
            </div>
        </div>
    </div>
</div>
<style>
    .container {
        display: flex;
        justify-content: flex-end;
    }
    .text-stack {
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex-grow: 1;
        padding-left: 2rem;
    }
    .header1 {
		margin: 0;
		font-size: 3.5rem;
		font-weight: 800;
	}
    .header2 {
		margin: 0;
        font-size: 2.5rem;
        font-weight: lighter;
    }
    .text-gradient {
        background: #6202CF;
        background: linear-gradient(to right, #6202CF 0%, #0068CF 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
	}
    .contact-details {
        color: rgb(30, 30, 30);
        margin-top: 1rem;
        display: flex;
        gap: 1rem;
    }
    .secondary-contact-details {
        display: flex;
        gap: 1rem;
    }
    @media only screen and (max-width: 850px) {

    }
    @media only screen and (max-width: 700px) {
        .container {
            padding: 0 2rem;
        }
        .header1 {
            font-size: 2.5rem;
        }
        .header2 {
            font-size: 1.5rem;
        }
        .contact-details {
            gap: 0.5rem;
        }
    }
    @media only screen and (max-width: 600px) {
        .text-stack {
            padding-left: 0rem;
        }
        .contact-details {
            flex-direction: column;
        }
    }
    @media only screen and (max-width: 500px) {
        .container {
            padding: 0;
        }
    }
    @media only screen and (max-width: 450px) {
        .contact-details {
            margin-top: 0.5rem;
        }
        .header1 {
            font-size: 2.0rem;
        }
        .header2 {
            font-size: 1.25rem;
        }
    }
</style>
